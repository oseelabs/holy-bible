{
  "expo": {
    "name": "Holy Bible",
    "slug": "holy-bible",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "holybible",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "org.oseelabs.books.bible",
      "minSdkVersion": 31
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-asset",
        {
          "assets": ["./assets/images/jesus"]
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Inter.ttf",
            "./assets/fonts/Galada-Regular.ttf",
            "./assets/fonts/SpaceMono-Regular.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Inter",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Inter.ttf",
                    "weight": 500
                  }
                ]
              },
              {
                "fontFamily": "Galada",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Galada-Regular.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/Galada-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Galada-Regular.ttf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/Galada-Regular.ttf",
                    "weight": 200
                  }
                ]
              },
              {
                "fontFamily": "SpaceMono",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/SpaceMono-Regular.ttf",
                    "weight": 500
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": ["-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0901c125-8b42-4fca-9cfc-732074e0bcfb"
      }
    },
    "owner": "oseelabs-expo"
  }
}
